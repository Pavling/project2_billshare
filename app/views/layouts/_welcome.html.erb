<div class="swall-4 large-4 columns" >
  <nav>
    <ul class='login'>
      <div class="floatright">
      <li><%= link_to 'Home', root_path %></li>
      <% if current_user %>
      <li><%= link_to current_user.email, user_path(current_user) %></li>
      <li><%= link_to "Edit Profile", edit_user_registration_path  %></li>
      <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
      <li><%= link_to "Create Group", new_group_path %></li>
      <% else %>
      <li> <%= link_to "Sign In", new_user_session_path %> </li>
      <li> <%= link_to "Register", new_user_registration_path %> </li>
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
      <% end %>
      </div>
    </ul>
  </nav>
    <div id="friends">
      <p> <%= link_to "Invite your Facebook Friends", "#", :id => "invite_fb_friends" %> </p>
      <script src="http://connect.facebook.net/en_US/all.js"></script>
      <script>
      $(function(){
        $("#invite_fb_friends").click(function(){
          FB.init({
            appId: '<%= ENV['FBAccessKeyId'] %>', 
            cookie: false,
            status: true
         });
          FB.ui({ method: 'apprequests', message: '<%= current_user %> thinks you are really awesome'})
        });
      });

      </script>
    </div>
</div>
